{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./src/*"],
      "@flavor/core": ["../../packages/core/src/index.ts"],
      "@flavor/core/*": ["../../packages/core/src/*"],
      "@flavor/woo": ["../../packages/woo/src/index.ts"],
      "@flavor/woo/*": ["../../packages/woo/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
